<style>
/* News Section Styles */
.news-section {
  margin: 2rem 0;
  padding: 0;
}

.news-heading {
  font-size: 2rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 1.5rem;
  text-align: center;
}

.news-container {
  max-width: 800px;
  margin: 0 auto;
}

.news-item {
  display: flex;
  flex-direction: column;
  padding: 1.5rem;
  margin-bottom: 1rem;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.news-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.news-date {
  font-size: 0.9rem;
  color: #666;
  font-weight: 600;
  text-align: center; /* Centered date */
  margin-bottom: 1rem;
}

.news-content {
  margin-bottom: 0.5rem; /* Smaller gap between content and read more */
}

.news-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #007bff; /* Blue color for title */
  margin-bottom: 0.5rem;
  line-height: 1.4;
}

.news-subtitle {
  font-size: 0.95rem;
  color: #fff; /* White color for subtitle */
  line-height: 1.4;
  text-align: left; /* Left aligned subtitle */
}

.news-actions {
  text-align: right; /* Right aligned read more */
}

.read-more {
  color: #28a745;
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: 500;
  transition: color 0.2s ease;
}

.read-more:hover {
  color: #1e7e34;
}

.arrow {
  margin-left: 0.25rem;
  transition: transform 0.2s ease;
}

.read-more:hover .arrow {
  transform: translateX(3px);
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .news-item {
    background: #2d3748;
    color: #e2e8f0;
  }
  
  .news-heading {
    color: #e2e8f0;
  }
  
  .news-title {
    color: #63b3ed; /* Light blue for dark mode */
  }
  
  .news-subtitle {
    color: #fff; /* Keep white for subtitle in dark mode */
  }
}
</style>

<div class="news-section">
  <h3 class="news-heading">Recent News</h3>
  <div class="news-container">
    <% for (const item of items) { %>
      <div class="news-item">
        <div class="news-date">
          <%= item.date %>
        </div>
        <div class="news-content">
          <div class="news-title">
            <%= item.title %>
          </div>
          <div class="news-subtitle">
            <%= item.description %>
          </div>
        </div>
        <% if (item.url) { %>
        <div class="news-actions">
          <a href="<%= item.url %>" class="read-more" target="_blank">
            Read more <span class="arrow">â†’</span>
          </a>
        </div>
        <% } %>
      </div>
    <% } %>
  </div>
</div>
